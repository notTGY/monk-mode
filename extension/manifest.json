{
  "manifest_version": 3,
  "name": "Pixelify",
  "version": "0.0",

  "description": "Reduce distractions by bluring images on websites.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Pixelify",
    "default_popup": "popup-app/index.html"
  },

  "options_ui": {
    "page": "options-app/index.html",
    "open_in_tab": true
  },

  "permissions": [ "tabs", "storage" ],

  "content_scripts": [{
    "matches": ["https://*/**"],
    "js": ["pixelify.js", "index.js"],
    "css": ["styles.css"]
  }]
}
